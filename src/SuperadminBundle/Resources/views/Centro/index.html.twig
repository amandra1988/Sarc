{% extends 'base.html.twig' %}

{% block angularInyect %}
    ng-app="superadmin-centro-de-acopio"
{% endblock %}

{% block title %}SARC{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('assets/css/style.css')}}">
{% endblock %}

{% block bodystyle%}
    style="background-color: #FFF;"
{% endblock %}

{% block header %}
    <style>
        .nav-tabs > li {
            width: 16%; 
        }
    </style>
    <img class="img-responsive" width="15%" style="margin: 7px auto;" src="{{asset('assets/img/sarc.png') }}" alt="">
    <hr>
    <section style="background:#FFF;"  class="row">
        <div class="board">
          <ul class="nav nav-tabs" id="myTab">
            <div class="liner"></div>
            <li>
              <a href="{{path('superadmin-dashboard')}}" title="Home">
                <span class="round-tabs one">
                  <img class="img-responsive" width="80%" style="margin: 7px auto;" src="{{asset('assets/img/home.png') }}" alt="">
                </span> 
              </a>
            </li>
            <li class="active">
              <a href="#centros" data-toggle="tab" title="Centros de acopio">
                <span class="round-tabs two">
                  <img class="img-responsive" width="70%" style="margin: 3px auto;" src="{{asset('assets/img/centro.png') }}" alt="">
                </span> 
              </a>
            </li>
            <li>
              <a href="{{path('empresas')}}" title="Empresas">
                <span class="round-tabs three" >
                  <img class="img-responsive" width="85%" style="margin: 7px auto;" src="{{asset('assets/img/empresas.png') }}" alt="">
                </span>
              </a>
            </li>
            <li>
              <a href="{{path('usuarios')}}"  title="Usuarios">
                <span class="round-tabs four">
                  <img class="img-responsive" width="70%" style="margin: 3px auto;" src="{{asset('assets/img/login.png') }}" alt="">
                </span> 
              </a>
            </li>
            <li>
                <a href="#" data-toggle="tab" title="Ayuda" id="help">
                  <span class="round-tabs six">
                    <img class="img-responsive" width="46%" style="margin: 18px auto;" src="{{asset('assets/img/help.png') }}" alt="">
                  </span> 
                </a>
            </li>
            <li>
              <a href="{{path('logout')}}"  title="Salir">
                <span class="round-tabs five">
                  <img class="img-responsive" width="50%" style="margin: 16px auto;" src="{{asset('assets/img/logout.png') }}" alt="">
                </span>
              </a>
            </li>
          </ul>
        </div>
    </section>
{% endblock %}


{% block javascripts %}
    <script type="text/javascript">
        saConstants = {
            urlBase: "{{ urlBase }}",
            urlBaseImg: "{{ urlBaseImagenes }}",
            urlBaseApi: "{{ urlBaseApi }}",
            urlBaseTmp: "{{ urlBaseTemplates }}",
            apiKey: "{{ apikey }}"
        };
    </script>
   {{ parent() }}
{% include '@Superadmin/Centro/javascripts.html.twig' %}
{% endblock %}

{% block body %}
    <div class="contenedor animated fadeInDown">
        {{ parent() }}
    </div>
{% endblock %}
